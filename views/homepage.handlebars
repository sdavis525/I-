<ol class="post-list">
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post_content}}" target="_blank">{{title}}</a>
        <span>({{post_content}})</span>
      </div>
      <div class="meta">
        {{!-- {{like_count}} by {{user.username}} on
        {{created_at}} --}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
</ol>
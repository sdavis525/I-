<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{posts.text}}" target="_blank">{{posts.title}}</a>
        <span>({{posts.text}})</span>
      </div>
      <div class="meta">
        {{!-- {{like_count}} by {{user.username}} on
        {{created_at}} --}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>

